<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/seekbar_backgrund" >

    <TextView
        android:id="@+id/mydialog_txtview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="你确定要退出吗？" />

    <Button
        android:id="@+id/main_cancal_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/mydialog_txtview"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="10dp"
        android:text="取消" />

    <Button
        android:id="@+id/main_sure_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/main_cancal_btn"
        android:layout_alignBottom="@+id/main_cancal_btn"
        android:layout_marginLeft="28dp"
        android:layout_toRightOf="@+id/main_cancal_btn"
        android:text="确定" />

</RelativeLayout>