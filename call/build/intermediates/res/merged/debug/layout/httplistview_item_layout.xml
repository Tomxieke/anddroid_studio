<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="5dp"
        android:padding="4dp"
        android:background="@android:color/white" >

        <ImageView
            android:id="@+id/icon_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="3dp"
            android:src="@drawable/img_smile" />

        <TextView
            android:id="@+id/name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/icon_img"
            android:singleLine="true"
            android:text="瑞琪大酒店"
            android:textSize="20sp" />
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

	        <ImageView
	            android:id="@+id/img_one"
	            android:layout_width="20dp"
	            android:layout_height="20dp"
	            android:layout_marginRight="5dp"
	            android:layout_alignParentRight="true"
	            android:layout_marginTop="3dp"
	            android:src="@drawable/near_card" 
	            android:visibility="gone"/>
	
	        <ImageView
	            android:id="@+id/img_two"
	            android:layout_width="20dp"
	            android:layout_height="20dp"
	            android:layout_marginRight="5dp"
	            android:layout_marginTop="3dp"
	            android:layout_toLeftOf="@id/img_one"
	            android:src="@drawable/near_group"
	            android:visibility="gone" />
	
	        <ImageView
	            android:id="@+id/img_three"
	            android:layout_width="20dp"
	            android:layout_height="20dp"
	            android:layout_marginRight="5dp"
	            android:layout_marginTop="3dp"
	            android:layout_toLeftOf="@id/img_two"
	            android:src="@drawable/near_ticket"
	            android:visibility="gone" />
		</LinearLayout>
        <TextView
            android:id="@+id/coupon_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_txt"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="4dp"
            android:layout_toRightOf="@id/icon_img"
            android:singleLine="true"
            android:text="大优惠"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="17sp" />
        
         <TextView
            android:id="@+id/distance_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:singleLine="true"
            android:layout_alignBottom="@id/icon_img"
            android:drawableLeft="@drawable/info_map"
            android:text="100m" />

        <TextView
            android:id="@+id/location_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/icon_img"
            android:layout_marginBottom="3dp"
            android:layout_toLeftOf="@id/distance_txt"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/icon_img"
            android:singleLine="true"
            android:text="四川省成都8号" />
    </RelativeLayout>

</RelativeLayout>