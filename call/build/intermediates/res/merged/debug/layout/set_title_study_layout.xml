<?xml version="1.0" encoding="utf-8"?>
<!-- ===========================隐藏了默认的title  将布局的第一项设置为title================================================================== -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="30dp"
    android:background="@android:color/holo_green_light" >

    <ImageView
        android:id="@+id/set_title_back_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:background="@drawable/set_title_back_selecter"
        android:clickable="true" />

    <ImageView
        android:id="@+id/set_title_icon_img"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/set_title_back_img"
        android:src="@drawable/adapter_homework_icon" />

    <TextView
        android:id="@+id/set_title_icon_txt"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@id/set_title_icon_img"
        android:gravity="center_vertical"
        android:text="美食" />

    <ImageView
        android:id="@+id/set_title_seach_img"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/set_title_search_selecter"
        android:clickable="true" />

    <ImageView
        android:id="@+id/set_title_map_img"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@id/set_title_seach_img"
        android:background="@drawable/set_title_map_selecter"
        android:clickable="true" />

</RelativeLayout>