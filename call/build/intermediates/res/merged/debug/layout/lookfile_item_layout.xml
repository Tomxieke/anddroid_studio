<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/file_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:src="@drawable/filesystem_icon_folder" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/file_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="xxxxxxxxxx"
            android:textSize="25sp" />

        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text=">" />

        <TextView
            android:id="@+id/file_create_time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/file_name_txt"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:text="2015/10/28" />
        <TextView
            android:id="@+id/file_size_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/file_name_txt"
            android:layout_toRightOf="@id/file_create_time_txt"
           
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:text="300mb" />
    </RelativeLayout>

</LinearLayout>